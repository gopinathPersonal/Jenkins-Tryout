pipeline {
    agent {
        docker {
            image 'maven:3.9.5-eclipse-temurin-17-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }

    stages {
        stage('build') {
            steps {
                git 'https://github.com/gopinathPersonal/sampleJavaProject.git'
                sh 'mvn clean package'
                sh 'javac HelloWorldTest.java'
            }
        }
        stage('Run') {
            steps {
                sh 'java HelloWorldTest'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}
